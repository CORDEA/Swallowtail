<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginTop="@dimen/list_item_main_card_margin"
    android:layout_marginStart="@dimen/list_item_main_card_margin"
    android:layout_marginEnd="@dimen/list_item_main_card_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/list_item_main_content_vertical_margin"
        android:layout_marginStart="@dimen/list_item_main_content_horizontal_margin"
        android:layout_marginEnd="@dimen/list_item_main_content_horizontal_margin"
        android:layout_marginBottom="@dimen/list_item_main_content_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sub_title"
            android:textColor="@color/secondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_marginBottom="@dimen/list_item_main_title_bottom_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/duration"
                android:textSize="14sp"
                android:textColor="@color/secondaryText"
                android:layout_gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/title"
                android:textSize="24sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/primaryText"
                android:layout_marginEnd="@dimen/list_item_main_title_end_margin"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/list_item_main_published_bottom_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/IconActive"
                android:src="@drawable/ic_publish_black_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/published_date"
                android:layout_marginStart="@dimen/list_item_main_detail_text_start_margin"
                android:textColor="@color/secondaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/IconActive"
                android:src="@drawable/ic_update_black_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/updated_date"
                android:layout_marginStart="@dimen/list_item_main_detail_text_start_margin"
                android:textColor="@color/secondaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
